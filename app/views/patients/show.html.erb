<h1><%= @patient.name %></h1>

<ul>
    <% @patient.appointments.each do |a| %>
        <li><strong>Date/Time:</strong> <%= a.appointment_datetime.strftime("%B %d, %Y at %k:%M") %></li>
        <li><strong>Doctor:</strong> <%= link_to a.doctor.name, doctor_path(a.doctor) %></li><br>
    <% end %>
</ul>